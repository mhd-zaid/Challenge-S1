{% extends 'front/base.html.twig' %}

{% block title %}Presta Auto - Connexion{% endblock %}

{% block main %}
        <div class="card flex justify-center items-center">
            <div class="flex flex-col items-center">
                <h1>Connexion</h1>
                <p>Saisissez votre mot de passe pour vous connecter</p>
            </div>
            <div class="mt-4">
                <form method="post" class="space-y-4">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="grid grid-cols-3">
                            <label class="flex items-center col-span-1" for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control col-span-2" autocomplete="email" required autofocus>
                    </div>
                    <div class="grid grid-cols-3">
                            <label for="inputPassword">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control col-span-2" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                    #}

                    <div class="mt-4 flex justify-center">
                        <button class="button button-details w-full" type="submit">
                            Se connecter
                        </button>
                    </div>
                </form>
                <div class="mt-4 w-full">
                    <a class="w-full" href="{{ path('app_forget_password') }}">
                        <button class="button button-details w-full">Mot de passe oubli√© ?</button>
                    </a>
                </div>



            </div>
        </div>
{% endblock %}