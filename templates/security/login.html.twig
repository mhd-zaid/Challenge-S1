{% block body %}


    <head>
        <meta charset="UTF-8">
          <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/axentix@0.5.3/dist/css/axentix.min.css">
    
      
    </head>
  
        <header>
            <nav class="navbar primary">
<a href="{{ path('back_app_category_prestation_index') }}" class="navbar-brand">
    <img classe= "img"  src="{{ asset('images/prestaAuto_Black.png') }}" alt="Logo" />
</a>                <div class="navbar-menu ml-auto">
                    <a class="navbar-link" href="#">Accueil</a>
                    <a class="navbar-link" href="#">Link 2</a>
                    <a class="navbar-link" href="#">Link 3</a>
