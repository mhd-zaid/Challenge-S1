{% extends 'base.html.twig' %}

{% block title %}Prestation{% endblock %}

{% block body %}
    <h1>Prestation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ prestation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ prestation.name }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ prestation.category }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ prestation.duration }}</td>
            </tr>
            <tr>
                <th>Prestation Image</th>
                <td>
                    <img src="{{ vich_uploader_asset(prestation, 'prestationImageFile') }}" alt="{{ prestation.name }}">
                </td>
            </tr>
            <tr>
                <th>Technician</th>
                <td>{{ prestation.technician }}</td>
            </tr>
            <tr>
                <th>Total_ht</th>
                <td>{{ prestation.totalHt }}</td>
            </tr>
            <tr>
                <th>Total_tva</th>
                <td>{{ prestation.totalTva }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ prestation.createdAt ? prestation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ prestation.updatedAt ? prestation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_app_prestation_index') }}">back to list</a>

    <a href="{{ path('back_app_prestation_edit', {'id': prestation.id}) }}">edit</a>

    {{ include('back/prestation/_delete_form.html.twig') }}
{% endblock %}
