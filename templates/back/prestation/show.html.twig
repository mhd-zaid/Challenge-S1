{% extends 'back/base.html.twig' %}

{% block title %}Prestation{% endblock %}

{% block main %}
    {% include 'components/page_header.html.twig' with {'title': 'Prestation n°'~prestation.id, 'link': path('back_app_prestation_index')} %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ prestation.id }}</td>
                <td>{{ prestation.name }}</td>
                <td>{{ prestation.category.name }}</td>
                <td>{{ prestation.duration }}</td>
                <td>{{ prestation.workforce }}</td>
            </tr>
            <tr>
                <th>Category</th>
            </tr>
            <tr>
                <th>Duration</th>
            </tr>

        </tbody>
    </table>
     <table class="table">
        <thead>
            <td>Produits</td>
            <td>Qté</td>
        </thead>
        <tbody>
            {% for prestationProduct in prestation.prestationProducts %}
                    <td>{{ prestationProduct.product.title }}</td>
                    <td>{{ prestationProduct.quantity }}</td>
                {% endfor %}
        </tbody>
    </table>

    <div class="flex space-x-4">
    <a href="{{ path('back_app_prestation_edit', {'id': prestation.id}) }}">
        <button class="button button-details">Modifier</button>
    </a>
    {{ include('back/prestation/_delete_form.html.twig') }}
    </div>
{% endblock %}
