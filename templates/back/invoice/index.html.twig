{% extends 'back/base.html.twig' %}

{% block title %}Presta Auto - Facture{% endblock %}

{% block main %}
    {% include 'components/page_header.html.twig' with {'title': 'Liste des factures', 'link': path('back_default_index')} %}

    <div>
        <div class="card">
            {% include 'components/table_Invoice_Estimate.html.twig' with {'type': 'invoice', 'pagination': invoicesPagination} %}
        </div>
        <div>
            <div class="flex space-x-16 items-center w-full py-2 px-2 bg-gray-200">
                <div class="text-medium flex justify-center items-center space-x-4">
                    <iconify-icon icon="flat-color-icons:ok" width="35px"></iconify-icon>
                    <p class="mb-0">Factures payées</p>
                </div>
                <div class="text-medium flex justify-center items-center space-x-4">
                    <iconify-icon icon="material-symbols:pending" style="color: orange;" width="35"></iconify-icon>
                    <p class="mb-0">Factures en attente de règlement</p>
                </div>
            </div>
        </div>
    </div>
    <div class="pagination mt-4 flex justify-between">
        {{ knp_pagination_render(invoicesPagination) }}
    </div>
{% endblock %}
