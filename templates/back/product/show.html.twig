{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>
                    <img src="{{ vich_uploader_asset(product, 'productImageFile') }}" alt="{{ product.description }}">
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_app_product_index') }}">back to list</a>

    <a href="{{ path('back_app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('back/product/_delete_form.html.twig') }}
{% endblock %}
