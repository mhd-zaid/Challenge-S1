{% extends 'back/base.html.twig' %}

{% block title %}User index{% endblock %}

{% block main %}
    {% include 'components/page_header.html.twig' with {'title': 'Liste des clients', 'link': path('back_default_index')} %}

    <div class="card">
        <table>
            <thead>
            <tr>
                <th scope="col" class="px-6 py-3 text-center">
                    {{ knp_pagination_sortable(customersPagination, 'Client n°', 'id') }}
                </th>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">Email</th>
                <th scope="col">
                    {{ knp_pagination_sortable(customersPagination, 'Statut', 'isValidated') }}
                </th>
            </tr>
            </thead>
            <tbody>
            {% if customersPagination is not empty %}
                {% for customer in customersPagination %}
                    {% if customer.firstname != "" and customer.lastname != "" %}
                        <tr>
                            <td>{{ customer.id }}</td>
                            <td>{{ customer.lastname }}</td>
                            <td>{{ customer.firstname }}</td>
                            <td>{{ customer.email }}</td>
                            {% if customer.isValidated == 1 %}
                                <td>
                                    <iconify-icon icon="flat-color-icons:ok" width="35px"></iconify-icon>
                                </td>
                            {% else %}
                                <td>
                                    <iconify-icon icon="flat-color-icons:cancel" width="35px"></iconify-icon>
                                </td>
                            {% endif %}
                            <td>
                                <a class="no-underline" href="{{ path('back_app_customer_show', {'id': customer.id}) }}">
                                    <button type="button" class="button button-details">Détails</button>
                                </a>
                            </td>
                            <td>
                                <a class="no-underline" href="{{ path('back_app_customer_edit', {'id': customer.id}) }}">
                                    <button type="button" class="button button-details">Editer</button>
                                </a>
                            </td>
                            {% if customer.isValidated != 1 %}
                                <td>
                                    {% include 'back/customer/_validate_form.html.twig'  with {'from': 'index'} %}
                                </td>
                            {% endif %}
                        </tr>
                    {% endif %}
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="7">Aucun client</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
    <div class="pagination mt-4 flex justify-between">
        {{ knp_pagination_render(customersPagination) }}
    </div>

{% endblock %}
