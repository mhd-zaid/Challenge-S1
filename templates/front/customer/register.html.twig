{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/app.scss') }}">
    <script src="{{ asset('js/script.js') }}"></script>
      <style>
        /* Custom styles */
        .container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 85vh;
                width: max-content;
        }
form {
    margin-top: 20%;
}
table {
  
    border-spacing: 0px;
}
        .form-container {
            width: 50%;
            padding: 10%;
            background-color: white;
            
           
            
        }

        .form-container h1 {
            text-align: center;
            margin-bottom: 10px;
            
        }

        .form-container h3 {
            margin-bottom: 5px;
            text-align: center;
            font-family: sans-serif;
            font-weight: 100;
  
           
        }

        .form-container label {
            display: block;
            margin-bottom: 10px;
               color: dimgrey;
        }

        .form-container input {
            width: 95%;
            padding: 8px;
            margin-bottom: 20px;
            border-left-width: 0;
            border-right-width: 0;
            border-top-width: 0;
        }

        .form-container button {
            width: 100%;
            padding: 10px;
            border-radius: 10px;
        }

        .image-container {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .image-container img {
            max-width: 100%;
            max-height: 100%;
        }

       
        .btn.btn-primary {
    background-color: deepskyblue;
    color: white;
    border: white;
        }
.a {
    color: black;
}

   .scrollable-input {
  max-height: 300px;
  overflow-y: auto;
}
    
    </style>
{% endblock %}

{% block body %}
<table class="container">
    <tr>
        <td class="image-container">
            <img src="{{ asset('images/login.png') }}" alt="Image">
        </td>
        <td class="form-container">
            <form method="post">
             
                <h1 class="titre">Inscription</h1>
                <h3 class="h3 mb-3 font-weight-normal">Saisissez vos données pour créer un compte</h3>

<div class="scrollable-input">
                 <label for="inputLastname">Nom</label>
                <input type="text"  name="lastname" id="inputLastname" placeholder="Votre nom" class="form-control" autocomplete="lastname" required autofocus>
               
                <label for="inputFirstname">Prénom</label>  
                <input type="text"  name="firstname" id="inputFirstname" placeholder="Votre prénom" class="form-control" autocomplete="firstname" required autofocus>
                
                 <label for="inputEmail">Email</label>
                <input type="email"  name="email" id="inputEmail" placeholder="malumalu@mail.fr" class="form-control" autocomplete="email" required autofocus>

                <label for="inputAddress">Adresse</label>
                <input type="text"  name="address" id="inputAddress" placeholder="Votre adresse" class="form-control" autocomplete="address" required autofocus>
                
                <label for="inputPhone">Contact</label>
                <input type="tel"  name="phone" id="inputPhone" placeholder="Votre numéro" class="form-control" autocomplete="phone" required autofocus>
               

                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <label for="inputPassword">Confirmation Password</label>
                <input type="password" name="confirm_password" id="inputPassword" class="form-control" autocomplete="current-password" required>
 </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


                <button class="btn btn-primary" type="submit">
                    S'inscrire
                </button>
               &nbsp;&nbsp;
               <div style="text-align: center; " >
    
    <br> 
     <a href="{{ path('app_login') }}">Se connecter</a>
</div>
                
            </form>
        </td>
    </tr>
</table>
{% endblock %}
